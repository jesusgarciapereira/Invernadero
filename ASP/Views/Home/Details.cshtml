@model DTO.clsTemperaturaConNombreInvernadero

@{
    ViewData["Title"] = "Details";

    int temperatura1progress = (int)(Model.Temp1 / 50.0 * 100);
    int temperatura2progress = (int)(Model.Temp2 / 50.0 * 100);
    int temperatura3progress = (int)(Model.Temp3 / 50.0 * 100);
}
<div>
    <h2 class="text-center">Invernadero Seleccionado</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NombreInvernadero)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreInvernadero)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Fecha)</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Temp1)</dt>
        <dd class="col-sm-10 d-flex align-items-center">
            <span class="me-3">@($"{Model.Temp1}ºC")</span>
            <div class="progress flex-grow-1" style="height: 20px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @temperatura1progress%;" aria-valuenow="@Model.Temp1" aria-valuemin="0" aria-valuemax="50"></div>
            </div>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Temp2)</dt>
        <dd class="col-sm-10 d-flex align-items-center">
            <span class="me-3">@($"{Model.Temp2}ºC")</span>
            <div class="progress flex-grow-1" style="height: 20px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @temperatura2progress%;" aria-valuenow="@Model.Temp2" aria-valuemin="0" aria-valuemax="50"></div>
            </div>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Temp3)</dt>
        <dd class="col-sm-10 d-flex align-items-center">
            <span class="me-3">@($"{Model.Temp3}ºC")</span>
            <div class="progress flex-grow-1" style="height: 20px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @temperatura3progress%;" aria-valuenow="@Model.Temp3" aria-valuemin="0" aria-valuemax="50"></div>
            </div>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Humedad1)</dt>
        <dd class="col-sm-10 d-flex align-items-center">
            <span class="me-3">@($"{Model.Humedad1}%")</span>
            <div class="progress flex-grow-1" style="height: 20px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.Humedad1%;" aria-valuenow="@Model.Humedad1" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Humedad2)</dt>
        <dd class="col-sm-10 d-flex align-items-center">
            <span class="me-3">@($"{Model.Humedad2}%")</span>
            <div class="progress flex-grow-1" style="height: 20px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.Humedad2%;" aria-valuenow="@Model.Humedad2" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Humedad3)</dt>
        <dd class="col-sm-10 d-flex align-items-center">
            <span class="me-3">@($"{Model.Humedad3}%")</span>
            <div class="progress flex-grow-1" style="height: 20px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.Humedad3%;" aria-valuenow="@Model.Humedad3" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </dd>
    </dl>
</div>

<div>
    <form asp-action="Index" method="post">
        <input type="hidden" name="idInvernadero" value="@Model.IdInvernadero" />
        <input type="hidden" name="fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")" />
        <button type="submit" class="btn btn-primary">Seleccionar otro Invernadero</button>
    </form>
</div>

